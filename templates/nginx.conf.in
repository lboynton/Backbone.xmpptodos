worker_processes 1;
daemon off;
events {
    worker_connections 1024;
}

http {
    include       mime.types;
    default_type  application/octet-stream;

    server {
        listen 8080;
        server_name localhost;

        location /http-bind {
            proxy_buffering off;
            tcp_nodelay on;
            keepalive_timeout 55;
            proxy_pass http://localhost:5280;
        }

        location / {
            root ${buildout:directory}/src/Backbone.xmpptodos;
        }
    }
}
